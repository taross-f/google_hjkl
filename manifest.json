{
  "manifest_version": 3,
  "name": "Google HJKL Navigation",
  "version": "1.0.0",
  "description": "Navigate Google search results with vim-like hjkl keys (j/k for up/down, h/l for prev/next page, Enter to open)",
  "author": "Google Vim Navigation Team",
  "homepage_url": "https://github.com/taross-f/google_vim",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/search*", 
        "*://www.google.co.jp/search*",
        "*://google.com/search*",
        "*://google.co.jp/search*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["activeTab"],
  "host_permissions": [
    "*://www.google.com/*",
    "*://www.google.co.jp/*",
    "*://google.com/*",
    "*://google.co.jp/*"
  ]
}
